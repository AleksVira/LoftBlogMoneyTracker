<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    card_view:cardBackgroundColor="@color/background"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_text"
            android:text="@string/name_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/sum_text"
            android:layout_toLeftOf="@+id/sum_text"
            android:layout_toStartOf="@+id/sum_text"
            android:paddingLeft="@dimen/list_item1_padding_left"
            android:paddingRight="@dimen/list_item1_padding_right"
            />

        <TextView
            android:id="@+id/date_text"
            android:text="@string/date_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item2_padding_left"
            android:paddingRight="@dimen/list_item2_padding_right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name_text"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/name_text"
            android:layout_alignEnd="@+id/name_text"
            android:gravity="end" />

        <TextView
            android:id="@+id/sum_text"
            android:text="@string/sum_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/list_item2_margin_left"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/list_item2_padding_left"
            android:paddingRight="@dimen/list_item2_padding_right"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>