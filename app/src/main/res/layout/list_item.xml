<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    >

    <TextView
        android:text="@string/name_field"
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sum_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sum_text"
        android:paddingRight="@dimen/list_item1_padding_right"
        android:paddingLeft="@dimen/list_item1_padding_left"
        android:layout_toLeftOf="@+id/sum_text" />
        <!--android:background="@color/aquamarine"-->

    <TextView
        android:text="@string/sum_field"
        android:id="@+id/sum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/list_item2_padding_left"
        android:paddingRight="@dimen/list_item2_padding_right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/list_item2_margin_left" />
        <!--android:background="@color/slate_blue"-->

</RelativeLayout>